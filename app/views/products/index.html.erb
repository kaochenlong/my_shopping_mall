<h1>Hello</h1>

<div class="row">
  <% @products.each do |product| %>
  <div class="col-sm-6 col-md-4">
    <div class="thumbnail">
      <%= image_tag product.image.small %>
      <div class="caption">
      <h3><%= product.title %></h3>
      <p><%= product.description %></p>
      <p><%= link_to '放到購物車', '#', class:'btn btn-danger' %></p>
      </div>
    </div>
  </div>
  <% end %>
</div>
